{
  "version": "1.0.0",
  "name": "HomeScreen Admin",
  "isEnabled": true,
  "contributions": {
    "smartFolders": {
      "items": [
        {
          "key": "homescreenAdminFolder",
          "displayName": "Applications",
          "command": "openConfigMain",
          "ribbonColor": "#1C8DD4",
          "location": {
            "section": "Administration",
            "index": 4
          },
          "icon": "Applications.png",
          "selectedIcon": "Applications.png",
          "showEnvironmentSelector": true
        }
      ]
    },
    "menus": {
      "items": [
        {
          "key": "newHomeScreenConfig",
          "displayName": "New Application",
          "command": "openNewConfig",
          "icon": "Applications.png",
          "windowKey": "homescreenConfigEditor",
          "isVisible": "isHomeScreenConfigEnabled",
          "canExecute": "isHomeScreenConfigEnabled"
        },
        {
          "key": "editHomeScreenConfig",
          "displayName": "Edit Application",
          "command": "openEditConfig",
          "icon": "Applications.png",
          "windowKey": "homescreenConfigEditor",
          "isVisible": "isHomeScreenConfigEnabled",
          "canExecute": "isHomeScreenConfigEnabled"
        },
        {
          "key": "selectHomeScreenObject",
          "displayName": "Select Object",
          "command": "openObjectPicker",
          "icon": "Applications.png",
          "windowKey": "homescreenObjectPicker",
          "isVisible": "isHomeScreenConfigEnabled",
          "canExecute": "isHomeScreenConfigEnabled"
        },
        {
          "key": "selectHomeScreenContentBundle",
          "displayName": "Select Content Bundle",
          "command": "openContentBundlePicker",
          "icon": "Applications.png",
          "windowKey": "homeScreenContentBundlePicker",
          "isVisible": "isHomeScreenConfigEnabled",
          "canExecute": "isHomeScreenConfigEnabled"
        }
      ]
    },
    "objectEditors": [
      {
        "objectType": "HomeScreenConfig",
        "item": "editHomeScreenConfig",
        "editorTypes": ["Edit"]
      },
      {
        "objectType": "HomeScreenConfig",
        "item": "newHomeScreenConfig",
        "editorTypes": ["Create"]
      },
      {
        "objectType": "HomeScreenObject",
        "item": "selectHomeScreenObject",
        "editorTypes": ["Create"]
      },
      {
        "objectType": "ContentBundleObject",
        "item": "selectHomeScreenContentBundle",
        "editorTypes": ["Create"]
      }
    ],
    "windows": [
      {
        "key": "homescreenConfigEditor",
        "showMenus": false,
        "size": {
          "minimumHeight": 700,
          "minimumWidth": 1045,
          "initialHeight": 700,
          "initialWidth": 1045
        }
      },
      {
        "key": "homescreenObjectPicker",
        "showMenus": false,
        "size": {
          "minimumHeight": 700,
          "minimumWidth": 1045,
          "initialHeight": 700,
          "initialWidth": 1045
        }
      },
      {
        "key": "homeScreenContentBundlePicker",
        "showMenus": false,
        "size": {
          "minimumHeight": 700,
          "minimumWidth": 1045,
          "initialHeight": 700,
          "initialWidth": 1045
        }
      }
    ]
  }
}
